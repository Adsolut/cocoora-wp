# Cocoora WordPress Environment Variables
# Copy this file to .env and adjust values as needed

# Database Configuration
DB_NAME=wordpress
DB_USER=wordpress
DB_PASSWORD=wordpress
DB_ROOT_PASSWORD=rootpassword

# WordPress Configuration
WP_DEBUG=1

# Deployment (Production)
REMOTE_USER=root
REMOTE_HOST=server.cocoora.it
REMOTE_PATH=/var/www/html/wp-content/themes/cocoora-theme
SSH_KEY_PATH=~/.ssh/cocoora_deploy
